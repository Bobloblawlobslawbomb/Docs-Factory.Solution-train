@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit</h2>

<h4>Edit this Machine: @Html.DisplayFor(model => model.Name)</h4>

<h4>Engineers the machine is assigned to:</h4>
<ol>
  @foreach (var join in Model.JoinEntities)
  {
    <li>@join.Engineer.FirstName</li>
  }
</ol>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  <br>
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.InstallDate)
  @Html.TextBoxFor(model => model.InstallDate)
  <br>
  @Html.Label("Add an engineer")
  @Html.DropDownList("EngineerId")
  <br>
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>